<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TopicCard">
        <item name="android:backgroundTint">@color/grey4</item>
    </style>

    <style name="TopicText">
        <item name="android:background">@drawable/rounded_bg</item>
        <item name="android:backgroundTint">@color/grey3</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="SupportButton">
        <item name="shapeAppearanceOverlay">@style/TopicButtonsShape</item>
        <item name="android:backgroundTint">@color/dark_green</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:padding">10dp</item>
        <item name="android:text">@string/support</item>
    </style>

    <style name="AgainstButton" parent="SupportButton">
        <item name="android:backgroundTint">@color/dark_red</item>
        <item name="android:text">@string/against</item>
    </style>

    <style name="OnlineTable">
        <item name="android:background">@drawable/rounded_bg</item>
        <item name="android:backgroundTint">@color/grey3</item>
    </style>

    <style name="OnlineTableText">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
    </style>
</resources>