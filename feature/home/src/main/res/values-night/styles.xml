<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="SubjectCard">
        <item name="android:backgroundTint">@color/light_black</item>
    </style>

    <style name="SubjectText">
        <item name="android:background">@drawable/rounded_bg</item>
        <item name="android:backgroundTint">@color/dark_gray</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="SupportButton">
        <item name="android:background">@drawable/rounded_bg</item>
        <item name="android:backgroundTint">@color/dark_green</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:text">@string/support</item>
    </style>

    <style name="AgainstButton">
        <item name="android:background">@drawable/rounded_bg</item>
        <item name="android:backgroundTint">@color/dark_red</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:text">@string/against</item>
    </style>

    <style name="OnlineTable">
        <item name="android:backgroundTint">@color/dark_gray</item>
    </style>

    <style name="OnlineTableText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
    </style>
</resources>