<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="IncomingMessageStyle">
        <item name="android:textSize">@dimen/msg_text_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/incoming_msg_bg_dark</item>
    </style>

    <style name="OutgoingMessageStyle">
        <item name="android:textSize">@dimen/msg_text_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/outgoing_msg_bg_dark</item>
    </style>

    <style name="PortraitMessageArea">
        <item name="android:background">@drawable/messages_area_bg_dark</item>
    </style>

    <style name="LandscapeMessageArea">
        <item name="android:background">@color/dark_gray</item>
    </style>

    <style name="NextOpponentButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:backgroundTint">@color/dark_green</item>
        <item name="android:padding">@dimen/call_screen_buttons_vertical_padding</item>
        <item name="android:textSize">@dimen/call_screen_buttons_text_size</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:text">@string/next</item>
    </style>

    <style name="EscapeConversationButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:padding">@dimen/call_screen_buttons_vertical_padding</item>
        <item name="android:backgroundTint">@color/dark_red</item>
        <item name="android:textSize">@dimen/call_screen_buttons_text_size</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:text">@string/back</item>
    </style>
</resources>